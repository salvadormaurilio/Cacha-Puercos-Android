<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <android.support.v7.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/spacing_small"
      android:layout_marginEnd="48dp"
      android:layout_marginLeft="@dimen/spacing_xmedium"
      android:layout_marginRight="48dp"
      android:layout_marginStart="@dimen/spacing_xmedium"
      android:layout_marginTop="@dimen/spacing_small"
      android:foreground="?attr/selectableItemBackground"
      card_view:cardBackgroundColor="@color/item_chat_received"
      card_view:cardCornerRadius="6dp"
      card_view:cardElevation="4dp"
      card_view:cardPreventCornerOverlap="false"
      card_view:cardUseCompatPadding="true"
      card_view:contentPaddingBottom="@dimen/spacing_xmedium"
      card_view:contentPaddingLeft="@dimen/spacing_xmedium"
      card_view:contentPaddingRight="@dimen/spacing_xmedium"
      card_view:contentPaddingTop="@dimen/spacing_xmedium"
      >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
      <TextView
          android:id="@+id/label_text_chat"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:layout_marginEnd="@dimen/spacing_medium"
          android:layout_marginRight="@dimen/spacing_medium"
          android:autoLink="all"
          android:text="no se como responder a eso sadasd asdasdasd "
          android:textColor="@color/secondary_text_black"
          android:textSize="@dimen/letter_small"
          />

      <ImageView
          android:id="@+id/play_message"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_toEndOf="@id/label_text_chat"
          android:layout_toRightOf="@id/label_text_chat"
          app:srcCompat="@drawable/play_circle"
          />

    </RelativeLayout>


  </android.support.v7.widget.CardView>


</LinearLayout>