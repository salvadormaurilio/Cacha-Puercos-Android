<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <android.support.v7.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/spacing_small"
      android:layout_marginEnd="48dp"
      android:layout_marginLeft="@dimen/spacing_xmedium"
      android:layout_marginRight="48dp"
      android:layout_marginStart="@dimen/spacing_xmedium"
      android:layout_marginTop="@dimen/spacing_small"
      android:foreground="?attr/selectableItemBackground"
      card_view:cardBackgroundColor="@color/item_chat_received"
      card_view:cardCornerRadius="6dp"
      card_view:cardElevation="4dp"
      card_view:cardPreventCornerOverlap="false"
      card_view:cardUseCompatPadding="true"
      card_view:contentPaddingBottom="@dimen/spacing_xmedium"
      card_view:contentPaddingLeft="@dimen/spacing_xmedium"
      card_view:contentPaddingRight="@dimen/spacing_xmedium"
      card_view:contentPaddingTop="@dimen/spacing_xmedium"
      >

    <TextView
        android:id="@+id/label_text_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:text="you in office"
        android:textColor="@color/secondary_text_black"
        android:textSize="@dimen/letter_small"
        />
  </android.support.v7.widget.CardView>


</LinearLayout>